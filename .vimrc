
" Automatic indenting, on new line.
set autoindent

" Real tab chars.
set noexpandtab

" Tab spacing.
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Use tabs at the start of a line, spaces elsewhere
set smarttab

" Show line numbers.
set number

" Proper autocomplete when opening files
set wildmode=longest,list,full
set wildmenu

" Tabbing
map <F7> :tabp<CR>
map <F8> :tabn<CR>
